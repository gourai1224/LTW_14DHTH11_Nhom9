@model Buoi10.Models.CategoryGroup
@{
    ViewBag.Title = "Xóa nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4 border-left-danger" style="max-width: 600px; margin: 0 auto;">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Cảnh báo xóa dữ liệu</h6>
    </div>
    <div class="card-body">

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
            <div class="text-right">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            </div>
        }
        else
        {
            <p>Bạn có chắc chắn muốn xóa nhóm danh mục: <strong class="text-danger">@Model.GroupName</strong>?</p>
            <p class="text-muted small">Lưu ý: Bạn chỉ có thể xóa nếu nhóm này không chứa danh mục con nào.</p>

            using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </div>
            }
        }
    </div>
</div>