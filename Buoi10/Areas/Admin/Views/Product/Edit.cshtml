@model Buoi10.Models.Product

@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cập nhật sản phẩm: @Model.ProductName</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ProductId) <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-3">
                        <label class="fw-bold">Tên sản phẩm</label>
                        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Danh mục</label>
                            @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CategoryId, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Mã SKU</label>
                            @Html.TextBoxFor(m => m.SKU, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Giá bán</label>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold">Tồn kho</label>
                            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Mô tả ngắn</label>
                        @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", rows = "3" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-3 text-center">
                        <label class="fw-bold d-block">Ảnh hiện tại</label>
                        <img src="~/assets/img/@Model.MainImage" style="max-width: 100%; height: auto; border-radius: 5px; border: 1px solid #ddd; padding: 5px;" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Chọn ảnh mới (nếu muốn thay)</label>
                        <input type="file" name="uploadImage" class="form-control" />
                    </div>

                    <div class="form-check mb-3">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                        <label class="form-check-label">Đang kinh doanh</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        }
    </div>
</div>