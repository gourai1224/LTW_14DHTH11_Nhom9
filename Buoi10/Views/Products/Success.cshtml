@model Buoi10.Models.Order

@{
    ViewBag.Title = "Đặt hàng thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h3 class="mb-0">🎉 Đặt hàng thành công!</h3>
                    <p class="mb-0">Cảm ơn bạn đã mua hoa tại Shop Hoa Xinh</p>
                </div>

                <div class="card-body p-4">

                    <h5 class="mb-3">📦 Thông tin đơn hàng</h5>

                    <table class="table table-borderless">
                        <tr>
                            <th width="35%">Khách hàng</th>
                            <td>@Model.CustomerName</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ giao hàng</th>
                            <td>@Model.AddressLine</td>
                        </tr>
                        <tr>
                            <th>Lời nhắn</th>
                            <td>@Model.MessageCard</td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                <span class="badge bg-info text-dark px-3 py-2">
                                    @Model.Status
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Ngày đặt</th>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                       

                    </table>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">💰 Tổng thanh toán:</h5>
                        <h4 class="text-danger fw-bold">
                            @Model.TotalAmount.ToString("N0") ₫
                        </h4>
                    </div>
                </div>

                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-brand px-4">
                        🛒 Tiếp tục mua
                    </a>
                  
                </div>
            </div>

        </div>
    </div>
</div>
