@model Buoi10.Models.AppUser

@{
    ViewBag.Title = "DangKy";
}

<main class="col-12 col-lg-9">
    <div class="mx-auto" style="max-width:520px">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h3 class="h5 text-center mb-3">Đăng ký khách hàng</h3>

                @using (Html.BeginForm())
                {
                    <div class="mb-3">
                        <label class="form-label">Họ tên</label>
                        <input type="text" class="form-control" name="FullName" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" name="Phone">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" name="PasswordHash" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-brand btn-rounded">
                            Đăng ký
                        </button>
                    </div>
                }

                <div class="small text-muted mt-3 text-center">
                    @ViewBag.Msg
                </div>
            </div>
        </div>
    </div>
</main>
